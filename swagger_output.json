          }
        }
      },
      "put": {
        "tags": ["Orders"],
        "summary": "Update order status by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "orderStatus": {
                  "type": "string",
                  "enum": ["Preparing", "Completed"]
                }
              }
            }
          }
        ],
        "responses": {
