        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": {
            "description": "Task details",
            "schema": { "$ref": "#/definitions/Task" }
          }
        }
      },
      "put": {
        "tags": ["Tasks"],
        "summary": "Update task by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
